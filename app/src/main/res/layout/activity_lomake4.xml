<?xml version="1.0" encoding="utf-8"?>
<!-- Reija Parvio -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#45DBD7D7"
    tools:context=".Lomake4">

    <TextView
        android:id="@+id/kysymys4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="4. Miten arvioisit ravintosi määrän/laadun tänään?" />

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/ravinto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="1. En syönyt tänään mitään"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="2. Napostelin vähän päivän aikana"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="3. Söin herkkuja/roskaruokaa vähän väliä päivän aikana"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="4. Söin suhteellisen säännöllisesti, mutta vain herkkuja ja roskaruokaa"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="5. Söin yhden aterian, mutta en muuta"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="6. En syönyt yhtään kunnon ateriaa, mutta kaikkea pientä terveellistä"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="7. Söin yhden monipuolisen aterian, mutta muuten epäsäännöllisesti/en ollenkaan "
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="8. En syönyt aamiaista ollenkaan, mutta muuten yritin syödä monipuolisesti "
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="9. Söin yhden monipuolisen aterian ja aamiaisen "
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/ravinto10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:onClick="onRadioButtonClicked"
            android:text="10. Söin monipuolisesti 4-5 kertaa päivässä "
            android:textSize="12sp" />

    </RadioGroup>

    <Button
        android:id="@+id/seuraava_sivu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:background="#549F6DDD"
        android:shadowColor="#00575454"
        android:text="Seuraava" />



</LinearLayout>